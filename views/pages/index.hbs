          <input type="text" id="register-username-input" class="form-control">
          <label for="register-username-input">Type your username</label>
        </div>
        <div class="md-form">
          <i class="fa fa-lock prefix"></i>
          <input type="text" id="register-username-input" class="form-control">
          <label for="register-username-input">Type your password</label>
        </div>
        <div class="alert alert-danger" role="alert" id="login-warning" style="display:none;"></div>
        <button type="submit" class="btn btn-secondary">Log in</button>
      </form>
    </div>
  </div>
